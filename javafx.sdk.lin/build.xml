<project name="org.netbeans.modules.javafx.sdk.lin" default="netbeans" basedir=".">
    <description>Builds, tests, and runs the project org.netbeans.modules.javafx.sdk.lin.</description>
    <import file="nbproject/build-impl.xml"/>

    <condition property="isLin">
      <or>
        <isfalse value="${onlycurrplat}"/>
        <and>
          <os family="unix"/>
          <os name="Linux"/>
        </and>
      </or>
    </condition>

    <target name="delete-release-external" depends="basic-init">
      <delete dir="release" quiet="true"/>
    </target>    

    <target name="init-release-external" depends="basic-init,delete-release-external" if="isLin">
      <property name="build.config" value="promoted"/>
      <property file="../build-${build.config}.properties"/>
      <mkdir dir="external"/>
      <property name="offline" value="false"/>
  		<get src="${javafx-sdk.lin.url}" dest="external/javafx_sdk-linux.zip" usetimestamp="true" verbose="true" ignoreerrors="${offline}"/>
      <unzip src="external/javafx_sdk-linux.zip" dest="release/javafx-sdk">
        <regexpmapper from="^(javafx-sdk[^/]*/)?(.*)$" to="\2"/>
      </unzip>
    </target>

    <target name="release" depends="files-init" if="has.release.dir">
        <mkdir dir="${cluster}"/>
        <copy todir="${cluster}" overwrite="true">
            <fileset dir="${release.dir}">
                <patternset includes="${release.files}"/>
            </fileset>
        </copy>        
    </target>

    <target name="init" depends="init-release-external,harness.init"/>
</project>
