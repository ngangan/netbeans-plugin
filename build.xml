    </target>
    
    <target name="clean" depends="-init,testuserdir-delete" description="Clean everything.">
        <mkdir dir="build/netbeans"/>
        <subant target="clean" buildpath="${modules.sorted}" inheritrefs="false" inheritall="false"/>
        <delete dir="${dist.dir}"/>
        <delete failonerror="false" includeemptydirs="true">
            <fileset dir="build">
                <exclude name="testuserdir/"/>
            </fileset>
        </delete>
    </target>

    <target name="l10n-kit">
      <zip destfile="build/l10n.zip" basedir="." compress="true" level="9" excludesfile="l10n.excludes" includesfile="l10n.includes"/>
    </target>

    <target name="zip-clusters" depends="build">
      <mkdir dir="build/clusters"/>
      <jar destfile="build/clusters/common.jar" compress="true" level="9">
        <fileset dir="build/netbeans/javafx2">
          <exclude name="javafx-sdk/**"/>
          <exclude name="**/*-mac.*"/>
          <exclude name="**/*-sol.*"/>
          <exclude name="**/*-win.*"/>
          <exclude name="**/*-lin.*"/>
        </fileset>
      </jar>    
      <jar destfile="build/clusters/windows.jar" compress="true" level="9">
        <fileset dir="build/netbeans/javafx2">
          <exclude name="javafx-sdk/**"/>
          <include name="**/*-win.*"/>
        </fileset>
        <fileset dir="javafx.sdk.win/release"/>
      </jar>    
      <jar destfile="build/clusters/linux.jar" compress="true" level="9">
        <fileset dir="build/netbeans/javafx2">
          <exclude name="javafx-sdk/**"/>
          <include name="**/*-lin.*"/>
        </fileset>
        <zipfileset dir="javafx.sdk.lin/release" filemode="755">
          <include name="javafx2/javafx-sdk/bin/*"/>
          <include name="javafx2/javafx-sdk/emulator/bin/*"/>
        </zipfileset>
        <zipfileset dir="javafx.sdk.lin/release">
          <exclude name="javafx2/javafx-sdk/bin/*"/>
          <exclude name="javafx2/javafx-sdk/emulator/bin/*"/>
        </zipfileset>
      </jar>
      <jar destfile="build/clusters/solaris.jar" compress="true" level="9">
        <fileset dir="build/netbeans/javafx2">
          <exclude name="javafx-sdk/**"/>
          <include name="**/*-sol.*"/>
        </fileset>
        <zipfileset dir="javafx.sdk.sol/release" filemode="755">
          <include name="javafx2/javafx-sdk/bin/*"/>
          <include name="javafx2/javafx-sdk/emulator/bin/*"/>
        </zipfileset>
        <zipfileset dir="javafx.sdk.sol/release">
          <exclude name="javafx2/javafx-sdk/bin/*"/>
          <exclude name="javafx2/javafx-sdk/emulator/bin/*"/>
        </zipfileset>
      </jar>
      <jar destfile="build/clusters/mac.jar" compress="true" level="9">
        <fileset dir="build/netbeans/javafx2">
          <exclude name="javafx-sdk/**"/>
          <include name="**/*-mac.*"/>
        </fileset>
        <zipfileset dir="javafx.sdk.mac/release" filemode="755">
          <include name="javafx2/javafx-sdk/bin/*"/>
          <include name="javafx2/javafx-sdk/emulator/bin/*"/>
        </zipfileset>
        <zipfileset dir="javafx.sdk.mac/release">
          <exclude name="javafx2/javafx-sdk/bin/*"/>
          <exclude name="javafx2/javafx-sdk/emulator/bin/*"/>
        </zipfileset>
      </jar>
    </target>

</project>
