        <zip destfile="${zips.dir}/javafx-cluster-lin.zip" update="false" duplicate="preserve">
            <zipfileset prefix="javafx2" dir="${javafx.cluster.dir}">
                <exclude name="${javafx.sdk.pattern}"/>
                <exclude name="**/*-mac.*"/>
                <exclude name="**/*-sol.*"/>
                <exclude name="**/*-win.*"/>
          </zipfileset>
