<project name="javafx-plugin-installers" default="build-installers">
  
  <property name="javafx.version" value="1.5.0.0.70"/>
  <property name="ant.build.javac.target" value="1.5"/>
  
  <target name="clean">
    <exec executable="umount" osfamily="mac" failifexecutionfails="false">
      <arg value="-f"/>
      <arg file="build/mac-mount"/>
    </exec>  
    <delete dir="build"/>
    <delete dir="../build/installers"/>
    <condition property="running.on.mac">
      <and>
        <os family="mac"/>
        <available file="/Developer/Applications/Utilities/PackageMaker.app/Contents/MacOS/PackageMaker"/>
      </and>  
    </condition>  
  </target>

  <target name="download-javase" depends="clean">
      <property name="build.config" value="daily"/>
      <property file="../build-${build.config}.properties"/>
      <mkdir dir="external"/>
      <property name="use.timestamp" value="true"/>
      <parallel>
        <get src="${netbeans.windows.installer.url}" dest="external/netbeans-javase-windows.exe" usetimestamp="${use.timestamp}" verbose="true"/>
        <get src="${netbeans.linux.installer.url}" dest="external/netbeans-javase-linux.sh" usetimestamp="${use.timestamp}" verbose="true"/>
        <get src="${netbeans.macosx.installer.url}" dest="external/netbeans-javase-macosx.dmg" usetimestamp="${use.timestamp}" verbose="true"/>
        <get src="${netbeans.solaris.installer.url}" dest="external/netbeans-javase-solaris.sh" usetimestamp="${use.timestamp}" verbose="true"/>
      </parallel>  
  </target>
 
  <target name="build-mac-cluster" depends="clean" if="running.on.mac">
    <mkdir dir="build/mac-cluster/javafx2"/>
    <copy todir="build/mac-cluster/javafx2">
      <fileset dir="../build/netbeans/javafx2">
        <exclude name="javafx-sdk/**"/>
        <exclude name="**/*-sol.*"/>
        <exclude name="**/*-win.*"/>
        <exclude name="**/*-lin.*"/>
      </fileset>
      <fileset dir="../javafx.sdk.mac/release"/>  
    </copy>
    <exec executable="sh" dir="build/mac-cluster/javafx2/javafx-sdk/bin" failonerror="yes">
      <arg value="-c"/>
      <arg value="chmod +x *"/>
    </exec>  
    <exec executable="sh" dir="build/mac-cluster/javafx2/javafx-sdk/emulator/bin">
      <arg value="-c"/>
      <arg value="chmod +x *"/>
    </exec>  
  </target>
  
  <target name="mount-mac-dmg" depends="download-javase,build-mac-cluster" if="running.on.mac">
    <mkdir dir="build/mac-mount"/>
    <exec executable="hdiutil" failonerror="yes">
      <arg value="convert"/>
      <arg value="-format"/>
      <arg value="UDSP"/>
      <arg file="external/netbeans-javase-macosx.dmg"/>
      <arg value="-o"/>
      <arg file="build/netbeans-6.5.1-javafx-macosx"/>
    </exec>  
    <exec executable="hdiutil" failonerror="yes">
      <arg value="mount"/>
      <arg value="-readwrite"/>
      <arg value="-mountpoint"/>
      <arg file="build/mac-mount"/>
      <arg file="build/netbeans-6.5.1-javafx-macosx.sparseimage"/>
    </exec>
  </target>

  <target name="build-servicetag" depends="clean">
    <mkdir dir="build/servicetag"/>
    <javac srcdir="servicetag-src" destdir="build/servicetag"/>
    <mkdir dir="build/pkgscripts"/>
    <jar destfile="build/pkgscripts/servicetag.jar">
      <fileset dir="servicetag-src" excludes="**/*.java"/>
      <fileset dir="build/servicetag"/>
      <manifest>
        <attribute name="Main-Class" value="org.netbeans.installer.mac.ServiceTagGenerator"/>
      </manifest>
    </jar>  
  </target>
  
  <target name="build-mac-pkg" depends="mount-mac-dmg,build-servicetag" if="running.on.mac">
    <mkdir dir="build/pkgscripts"/>
    <copy todir="build/pkgscripts">
      <fileset dir="build/mac-mount/NetBeans 6.5.1.mpkg/Contents/Packages/baseide.pkg/Contents/Resources" includes="env.sh,addproduct_id.sh,add_cluster.sh,get_current_jdk.sh"/>
      <fileset file="pkg-src"/>
    </copy>
    <exec executable="sh" failonerror="yes">
        <arg value="-c"/>
        <arg value="/Developer/Applications/Utilities/PackageMaker.app/Contents/MacOS/PackageMaker -build -v -ds -p build/javafx.pkg -f build/mac-cluster -i pkg-src/Info.plist -r build/pkgscripts -d pkg-src/Description.plist"/>
    </exec>                                         
  </target>

  <target name="patch-mac-dmg" depends="mount-mac-dmg,build-mac-pkg" if="running.on.mac">
    <exec executable="sh" dir="build/mac-mount/NetBeans 6.5.1.mpkg/Contents/Packages/baseide.pkg/Contents/Resources" failonerror="yes">
        <arg value="-c"/>
        <arg value="sed -i '' 's/addproduct_id.sh &quot;NB&quot;/addproduct_id.sh &quot;NBFX&quot;/' postflight"/>            
    </exec>
    <copy todir="build/mac-mount">
      <fileset dir="mac-patch-src"/>
    </copy>
    <copy file="../netbeans-license-javafx.txt" tofile="build/mac-mount/NetBeans 6.5.1.mpkg/Contents/Resources/License.txt"/>
    <copy todir="build/mac-mount/NetBeans 6.5.1.mpkg/Contents/Packages/javafx.pkg">
      <fileset dir="build/javafx.pkg"/>
    </copy>
    <exec executable="sh" dir="build/mac-mount/NetBeans 6.5.1.mpkg/Contents/Packages/javafx.pkg/Contents/Resources" failonerror="yes">
      <arg value="-c"/>
      <arg value="chmod +x *"/>
    </exec>  
  </target>

  <target name="build-mac-dmg" depends="patch-mac-dmg" if="running.on.mac">
    <exec executable="hdiutil">
      <arg value="detach"/>
      <arg file="build/mac-mount"/>
    </exec>  
    <mkdir dir="../build/installers"/>
    <exec executable="hdiutil" failonerror="yes">
      <arg value="convert"/>
      <arg value="-format"/>
      <arg value="UDZO"/>
      <arg file="build/netbeans-6.5.1-javafx-macosx.sparseimage"/>
      <arg value="-o"/>
      <arg file="../build/installers/netbeans-6.5.1-javafx-macosx.dmg"/>
    </exec>  
  </target>
  
  <target name="unzip-javase" depends="download-javase">
    <mkdir dir="build/linux"/>
    <exec executable="unzip">
      <arg file="external/netbeans-javase-windows.exe"/>
      <arg value="-d"/>
      <arg file="build/windows"/>
    </exec>
    <mkdir dir="build/linux"/>
    <exec executable="unzip">
      <arg file="external/netbeans-javase-linux.sh"/>
      <arg value="-d"/>
      <arg file="build/linux"/>
    </exec>
    <mkdir dir="build/solaris"/>
    <exec executable="unzip">
      <arg file="external/netbeans-javase-solaris.sh"/>
      <arg value="-d"/>
      <arg file="build/solaris"/>
    </exec>
  </target>

  <target name="build-ant-lib">
    <mkdir dir="build/ant-lib"/>
    <javac srcdir="ant-lib-src" destdir="build/ant-lib"/>
    <taskdef name="currentmillis" classname="org.netbeans.installer.javafx.CurrentMillisTask" classpath="build/ant-lib"/>
    <taskdef name="firstfname" classname="org.netbeans.installer.javafx.FirstFNameTask" classpath="build/ant-lib"/>
    <taskdef name="genlist" classname="org.netbeans.installer.javafx.GenListTask" classpath="build/ant-lib"/>
  </target>
 
  <target name="build-logic" depends="unzip-javase">
    <mkdir dir="build/logic"/>
    <javac srcdir="logic-src" destdir="build/logic" classpath="build/windows"/>
    <jar destfile="build/logic.jar">
      <fileset dir="logic-src" excludes="**/*.java"/>
      <fileset dir="build/logic"/>
      <manifest>
        <attribute name="Configuration-Logic-Class" value="org.netbeans.installer.products.nb.javafx.ConfigurationLogic"/>
      </manifest>
    </jar>  
  </target>

  <target name="build-data" depends="build-ant-lib">
    <mkdir dir="build/data/common-cluster/javafx2"/>
    <copy todir="build/data/common-cluster/javafx2">
      <fileset dir="../build/netbeans/javafx2">
        <exclude name="javafx-sdk/**"/>
        <exclude name="**/*-mac.*"/>
        <exclude name="**/*-sol.*"/>
        <exclude name="**/*-win.*"/>
        <exclude name="**/*-lin.*"/>
      </fileset>  
    </copy>
    <mkdir dir="build/data/win-cluster/javafx2"/>
    <copy todir="build/data/win-cluster/javafx2">
      <fileset dir="../build/netbeans/javafx2">
        <exclude name="javafx-sdk/**"/>
        <include name="**/*-win.*"/>
      </fileset>
      <fileset dir="../javafx.sdk.win/release"/>  
    </copy>
    <mkdir dir="build/data/lin-cluster/javafx2"/>
    <copy todir="build/data/lin-cluster/javafx2">
      <fileset dir="../build/netbeans/javafx2">
        <exclude name="javafx-sdk/**"/>
        <include name="**/*-lin.*"/>
      </fileset>
      <fileset dir="../javafx.sdk.lin/release"/>  
    </copy>
    <mkdir dir="build/data/sol-cluster/javafx2"/>
    <copy todir="build/data/sol-cluster/javafx2">
      <fileset dir="../build/netbeans/javafx2">
        <exclude name="javafx-sdk/**"/>
        <include name="**/*-sol.*"/>
      </fileset>
      <fileset dir="../javafx.sdk.sol/release"/>  
    </copy>
    <mkdir dir="build/data/common-cluster/META-INF"/>
    <antcall target="-list-files">
      <param name="list.file" location="build/data/common-cluster/META-INF/files.list"/>
      <param name="dir" location="build/data/common-cluster"/>
    </antcall>
    <mkdir dir="build/data/win-cluster/META-INF"/>
    <antcall target="-list-files">
      <param name="list.file" location="build/data/win-cluster/META-INF/files.list"/>
      <param name="dir" location="build/data/win-cluster"/>
    </antcall>
    <mkdir dir="build/data/lin-cluster/META-INF"/>
    <antcall target="-list-files">
      <param name="list.file" location="build/data/lin-cluster/META-INF/files.list"/>
      <param name="dir" location="build/data/lin-cluster"/>
    </antcall>
    <mkdir dir="build/data/sol-cluster/META-INF"/>
    <antcall target="-list-files">
      <param name="list.file" location="build/data/sol-cluster/META-INF/files.list"/>
      <param name="dir" location="build/data/sol-cluster"/>
    </antcall>
  </target>

