    </loadfile>
    <loadfile property="original.registry.sol" srcfile="build/solaris/data/registry.xml">
      <filterchain>
        <linecontains negate="true">
          <contains value="/components>"/>
        </linecontains>  
        <linecontains negate="true">
          <contains value="/registry>"/>
        </linecontains>  
