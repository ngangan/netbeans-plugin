<project name="org.netbeans.modules.javafx.sdk.win" default="netbeans" basedir=".">
    <description>Builds, tests, and runs the project org.netbeans.modules.javafx.sdk.win.</description>
    <import file="nbproject/build-impl.xml"/>

    <condition property="isWin">
      <or>
        <isfalse value="${onlycurrplat}"/>
        <os family="windows"/>
      </or>
    </condition>

    <target name="init-release-external" depends="basic-init" if="isWin">
      <property name="build.config" value="daily"/>
      <property file="../build-${build.config}.properties"/>
      <mkdir dir="external"/>
      <property name="offline" value="false"/>
      <get src="${javafx-sdk.win.url}" dest="external/javafx_sdk-windows.zip" usetimestamp="true" verbose="true" ignoreerrors="${offline}"/>
      <delete dir="release" quiet="true"/>
      <unzip src="external/javafx_sdk-windows.zip" dest="release/javafx-sdk">
        <regexpmapper from="^(javafx-sdk[^/]*/)?(.*)$" to="\2"/>
      </unzip>
    </target>

    <target name="init" depends="basic-init,init-release-external,files-init,build-init"/>
</project>
